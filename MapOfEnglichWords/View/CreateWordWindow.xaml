<Window x:Class="MapOfEnglichWords.View.CreateWordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MapOfEnglichWords.View"
        mc:Ignorable="d"
        Title="Я выучил новое слово" Height="350" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="1" Grid.Column="0" >Иностранное слово:</Label>
        <Label Grid.Row="1" Grid.Column="1">Родное слово:</Label>
        <TextBox Grid.Row="2" Grid.Column="0"/>
        <TextBox Grid.Row="2" Grid.Column="1"/>
        <Label Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"> Пример использования:</Label>
        <TextBox Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"/>
        <Button Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Content="Готово" />
    </Grid>
    
</Window>
