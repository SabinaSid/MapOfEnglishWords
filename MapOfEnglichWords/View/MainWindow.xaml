<Window x:Class="MapOfEnglichWords.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MapOfEnglichWords"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#999">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <!--<Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*" MinWidth="300"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>-->

        <Label Content="Label" HorizontalAlignment="Left" Margin="384,10,0,0" VerticalAlignment="Top" Grid.Row="0"/>
            <ListView Grid.Row="1"  Margin="10" ItemsSource="{Binding Words}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="0 0 0 1" BorderBrush="Black" Margin="0 5">
                        <Button Content="{Binding Name}" Height="100" Width="100"/>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Height="100" Width="100" Grid.Row="2" Command="Open" Background="Coral" x:Name="bOpenCreateWordWindow" />

    </Grid>
</Window>
